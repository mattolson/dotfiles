# Powerlevel10k instant prompt
# Must stay near top. Code requiring console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else below.
if [[ -r "${XDG_CACHE_HOME}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Powerlevel10k theme
source /opt/homebrew/share/powerlevel10k/powerlevel10k.zsh-theme

# Project shortcuts
{{- if eq .chezmoi.hostname "Sierra" }}
export CURRENT_PROJ="mattolson/agent-sandbox"
{{- else }}
export CURRENT_PROJ="workos/infra"
{{- end }}
export WORKSPACE="$HOME/dev/workspace"
export PROJ_ROOT="$WORKSPACE/$CURRENT_PROJ"

# Aliases
alias ls='ls -alFG'
alias grep='grep --color=auto'
alias mkdir='mkdir -p'
alias be='bundle exec'
alias dc='docker compose'
alias dot='chezmoi'
alias av='aws-vault'
alias hobbs='cd ~/hobbs && dc up -d && dc exec hobbs zsh'
alias export-dotfiles='mkdir -p ~/.config/dotfiles && dot archive --output=~/.config/dotfiles/archive.tar.gz'

# Functions
function ws() { cd $WORKSPACE; }
function gp() { cd $PROJ_ROOT; }

# Powerlevel10k config
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Mise
[[ -x ~/.local/bin/mise ]] && eval "$(~/.local/bin/mise activate zsh)"

# fzf keybindings and completion (ctrl-r, ctrl-t, alt-c)
source <(fzf --zsh)

# Syntax highlighting and autosuggestions (must be near end of zshrc)
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=240'
source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# History
HISTFILE="${XDG_STATE_HOME:-$HOME/.local/state}/zsh/history"
HISTSIZE=50000
SAVEHIST=50000
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_REDUCE_BLANKS
setopt SHARE_HISTORY
setopt EXTENDED_HISTORY

# Vi mode
bindkey -v
KEYTIMEOUT=1
WORDCHARS='*?_-.[]~=&;!#$%^(){}<>'
bindkey '^W' backward-kill-word
bindkey '^U' backward-kill-line

# Completion system (after plugins that may modify completion)
zmodload zsh/complist
autoload -Uz compinit && compinit
setopt MENU_COMPLETE
LISTMAX=0

# Completion caching
zstyle ':completion::complete:*' use-cache on
zstyle ':completion::complete:*' cache-path "${XDG_CACHE_HOME:-$HOME/.cache}/zsh/zcompcache"

# Case-insensitive, partial-word, and substring completion
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'

# Menu selection with arrow keys
zstyle ':completion:*:*:*:*:*' menu select
bindkey -M menuselect '^[[A' up-line-or-history
bindkey -M menuselect '^[[B' down-line-or-history
bindkey -M menuselect '^[[D' backward-char
bindkey -M menuselect '^[[C' forward-char

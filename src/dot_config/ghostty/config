# Ghostty configuration

# Include random theme (updated by Raycast script on launch)
# This file is not managed by chezmoi
config-file = ?theme-current

# Font settings
font-family = Hack Nerd Font
font-size = 15

# Terminal
term = xterm-256color

# Cursor
cursor-style = bar
cursor-style-blink = false
shell-integration-features = no-cursor

# Window
window-padding-x = 10
window-padding-y = 10

# Disable bell notifications
bell-features = no-attention,no-title

# Mouse
mouse-hide-while-typing = true

# Clipboard
copy-on-select = false

# Tab navigation
keybind = cmd+right=next_tab
keybind = cmd+left=previous_tab
